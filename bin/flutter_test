# Use of this source code is governed by a MIT license that can be
# found in the LICENSE file.

# 静的解析を実行する
fvm flutter analyze
if [ $? -gt 0 ]; then
  # flutter analyze でエラーがあれば処理終了
  exit 1
fi

# 前回のテスト結果を削除する
rm -rf coverage
echo 'Removed coverage dir'

# テストを実行する
echo 'Testing github-search...'
fvm flutter test --no-test-assets --coverage --machine > test-report.log
if [ $? -gt 0 ]; then
  # flutter test でエラーがあれば結果を表示して処理終了
  fvm flutter pub global run dart_dot_reporter test-report.log --show-message
  exit 1
fi
echo 'Tests done!'

# カバレッジから不要な結果を削除する
lcov --remove coverage/lcov.info 'lib/utils/assets/*' 'lib/localizations/*' 'lib/infrastructure/isar/collections/*' -o coverage/lcov.info

# カバレッジ結果のHTMLを出力する
genhtml coverage/lcov.info -o coverage/html

# テスト結果をコンソールに表示する
fvm flutter pub global run dart_dot_reporter test-report.log --show-message

# カバレッジ結果を表示する
open coverage/html/index.html